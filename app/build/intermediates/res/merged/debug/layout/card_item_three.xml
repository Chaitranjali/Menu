<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="8dp"
        card_view:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/choti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ch"
                android:layout_margin="6dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

            <Button
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="200"
                android:textColorHint="@color/white"
                android:id="@+id/button2"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_btn"
                android:backgroundTint="@color/gray"
                android:drawableLeft="@drawable/ic_favorite_outline_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/choti" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="300"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_attach_money_24dp"
                android:id="@+id/button"
                android:background="@color/gray"
                android:gravity="right|center"
                android:layout_alignBottom="@+id/choti"
                android:layout_alignRight="@+id/choti"
                android:layout_alignEnd="@+id/choti"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="1dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="This is Yummmyyyyy...(Non_Veg)"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/choti"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button"
                android:id="@+id/textView2" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/loki"
                android:layout_margin="6dp"
                android:background="@drawable/round_plus_icon"
                android:src="@drawable/ic_add_circle_24dp"
                android:layout_above="@+id/textView2"
                android:layout_alignLeft="@+id/choti"
                android:layout_alignStart="@+id/choti" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
